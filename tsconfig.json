{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "es2015.iterable", "ESNext", "ES2018.Intl"],
    "outDir": "lib",
    "noImplicitAny": false,
    "skipLibCheck": true,    
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "./packages/common/**/*",
    "./packages/components/**/*",
    "./packages/ui-plugins/**/*",
    "./tests/setup.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
